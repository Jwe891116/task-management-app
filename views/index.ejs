<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Task Management App</title>
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    <h1>Task Management App</h1>

    <!-- Error display section -->
    <% if (errors && errors.length > 0) { %>
        <div class="error-container">
            <h3>Please fix the following errors:</h3>
            <ul class="error-list">
                <% errors.forEach(error => { %>
                    <li class="error-item"><%= error %></li>
                <% }); %>
            </ul>
        </div>
    <% } %>

    <!-- Add task form -->
    <form action="/tasks" method="POST" class="<%= (errors && errors.length > 0) ? 'submitted' : '' %>">
        <input type="text" name="title" placeholder="Task title (3-100 characters)"
               value="<%= title || '' %>" required
               minlength="3" maxlength="100">
        <input type="text" name="description" placeholder="Task description (max 500 characters)"
                value="<%= description || '' %>" required
                  maxlength="500">
        <button type="submit">Add Task</button>
    </form>

    <!-- Task display -->
    <% if (tasks.length === 0) { %>
        <p>No tasks found.</p>
    <% } else { %>
        <ul>
            <% tasks.forEach(task => { %>
                <li class="<%= task.completed ? 'completed' : '' %>">
                    <strong><%= task.title %></strong>
                    <p><%= task.description %></p>
                    <p>Created: <%= new Date(task.created_at).toLocaleString() %></p>
                    <p>Status: <%= task.completed ? 'Completed' : 'Incomplete' %></p>
                    <div class="task-actions">
                        <!-- Toggle completion status -->
                        <form action="/tasks/<%= task.id %>?_method=PATCH" method="POST">
                            <button type="submit"><%= task.completed ? 'Mark Incomplete' : 'Mark Complete' %></button>
                        </form>
                        <!-- Delete task -->
                        <form action="/tasks/<%= task.id %>?_method=DELETE" method="POST">
                            <button type="submit">Delete</button>
                        </form>
                    </div>
                </li>
            <% }) %>
        </ul>
    <% } %>
</body>
</html>